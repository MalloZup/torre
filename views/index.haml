!!! 5

%html
  %head
    %meta{:charset => "utf-8"}
    %title Torre Web
    %script(src="/js/Chart.js")
    %script(src="/js/Chart.min.js")
  %body
    %h1 Torre Http Response
    %canvas{:id => "line-chart", :width => 800, :height => 500}
    :javascript
      var ctx = document.getElementById("line-chart").getContext('2d'); 
      var js_http_res = #{@res_times};
      var myChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: #{@res_times},
          datasets: [{
              label: 'Http Res time',
              data: #{@res_times},
              backgroundColor: 'rgb(54, 162, 235)',
              borderColor: 'rgb(255, 99, 132)'
             }]
        },
        options: {  responsive: false  }
      });
